import time
import os
import sys


def escribir_lento(texto, delay=0.1):
	"""Imprime el texto como si estuviera siendo tecleado"""
	for char in texto:
		sys.stdout.write(char)
		sys.stdout.flush()
		time.sleep(delay)
	sys.stdout.write("\n")  # salto de línea al final

class Main(object):
	def __init__(self):

		usuario_pc = os.getlogin()
		print(usuario_pc)
		time.sleep(3)

		escribir_lento("Wake up " + usuario_pc, delay=0.12)
		time.sleep(5)


		time.sleep(5)
		os.system("cls")

		print("The Matrix as you...")
		time.sleep(5)
		os.system("cls")

		print("Follow the white rabbit...")
		time.sleep(5)
		os.system("cls")

		print("Knock Knock " + usuario_pc)
		time.sleep(5)
		os.system("cls")

		print("✅ Acceso permitido")
		self.tabla_dinamica()   # se llama con self

	def tabla_dinamica(self):
		print(">>> Función PlazoDeLaDeuda ejecutada correctamente 🎉")
		print("Holailas !!!")
		time.sleep(22)


if __name__ == '__main__':
	Main()
